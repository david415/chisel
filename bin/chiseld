#!/usr/bin/env python
import sys
import os

# Hack to set the proper sys.path. Overcomes the export PYTHONPATH pain.
sys.path[:] = map(os.path.abspath, sys.path)
sys.path.insert(0, os.path.abspath(os.getcwd()))

from twisted.internet import reactor
from twisted.python import log
from chisel.api import notaryAPI

print "Starting notary HTTP API on http://127.0.0.1:2997"
log.startLogging(sys.stdout)
reactor.listenTCP(2997, notaryAPI, interface="127.0.0.1")
reactor.run()
